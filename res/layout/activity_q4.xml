<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q4Activity"
    android:background="@drawable/sun">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/wood"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="事件四：戰鬥"
        android:textSize="26dp"
        android:background="@drawable/wood"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"

        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/wood"
        android:layout_marginTop="55dp"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="比武過程中，你和你的搭檔陷入苦戰，因為對手不時使出遊走規則邊緣的小伎倆，讓你和搭檔一不小心就會傷及身體，但裁判卻無動於衷，這時的你會："
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background = "#9d000000"
        android:textColor="#ffffffff">

    </TextView>

    <Button
        android:id="@+id/btn_q4_1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/wood"
        android:text="選擇"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tv_q4"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp">
    </Button>

    <TextView
        android:id="@+id/tv_q4_1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_q4_1"
        android:layout_alignTop="@+id/tv_q4"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp"
        android:background = "@drawable/textview"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:text="採取守勢，觀察對手的出招習慣，等待破綻出現。"

        >
    </TextView>

    <Button
        android:id="@+id/btn_q4_2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/wood"
        android:text="選擇"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn_q4_1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="15dp">
    </Button>

    <TextView
        android:id="@+id/tv_q4_2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_q4_1"
        android:layout_alignTop="@+id/tv_q4_1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="130dp"
        android:background = "@drawable/textview"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:text="配合隊友指揮，不輕舉妄動。能穩定發揮實力就有勝算。"

        >
    </TextView>

    <Button
        android:id="@+id/btn_q4_3"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/wood"
        android:text="選擇"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn_q4_2"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="15dp">
    </Button>

    <TextView
        android:id="@+id/tv_q4_3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_q4_2"
        android:layout_alignTop="@+id/tv_q4_2"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:background = "@drawable/textview"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:text="確保隊友不受威脅並和裁判反應對手的行為。"

        >
    </TextView>




</RelativeLayout>